---
interface Props {
  text: string
}

const { text } = Astro.props
---

<div class="pill">
  <p>{text}</p>
</div>

<style>
  .pill {
    background-color: var(--accent-strong);
    border-radius: 100px;
    padding: 0.3rem 0.65rem;
  }

  .pill p {
    color: #fff;
    font-weight: 500;
  }
</style>